@{
    ViewBag.Title = "DPUReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datepicker.js"></script>

<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Plugins/DPUReport.js"></script>
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />


<script src="~/Scripts/RGraph.common.core.js" type="text/javascript"></script>
<script src="~/Scripts/RGraph.line.js" type="text/javascript"></script>
<script src="~/Scripts/RGraph.bar.js" type="text/javascript"></script>
<script src="~/Scripts/RGraph.drawing.rect.js" type="text/javascript"></script>
<script src="~/Scripts/RGraph.common.tooltips.js" type="text/javascript"></script>
<script src="~/Scripts/RGraph.drawing.rect.js" type="text/javascript"></script>
<script src="~/Scripts/RGraph.common.dynamic.js" type="text/javascript"></script>
<script src="~/Scripts/RGraph.common.key.js" type="text/javascript"></script>
@*<script src="~/Scripts/RGraph.scatter.js"></script>*@


<style>
    .drop-scrol .dropdown-menu {
        height: 250px;
        overflow-y: scroll;
    }

    .groupbgcolor {
        font-weight: bold;
        border: 1px solid beige;
        background: gainsboro;
    }
</style>




<div class="Table_contentpanel  ">
    <div class="Audittrackertitlebg ">
        <span class="trn"> DPU Report</span>


    </div>
    <div class="chartheadingpanel" style="text-align: center;">
        <label class="radio-inline">
            <input type="radio" name="dpuReport" value="dpuVehicle" checked=""> <span class="trn" data-trn-key="DPU by Vehicle Type" data-trn-value=""> DPU by Vehicle Type</span>
        </label>
        <label class="radio-inline">
            <input type="radio" name="dpuReport" value="dpuStations"> <span class="trn" data-trn-key="DPU by Stations" data-trn-value=""> DPU by Stations</span>
        </label>
    </div>


    <div id="chartA">
        <div class="row mt-10">
            <div class="col-lg-4 col-sm-6 col-md-4">
                <label for="" class="control-label col-sm-4">
                    <span class="trn"> Vehicle Type</span>
                </label>
                <div class="col-sm-8 dmaster drop-scrol" style="">
                    @*<select id="drpVarient" class="selectpicker" data-hide-disabled="true" data-live-search="true"></select>*@
                    <select multiple="multiple" id="drpVehicle" class="multi-option" style=""> </select>
                </div>
            </div>
            <div class="form-group col-lg-4 col-sm-6 col-md-4">
                <label for="" class=" col-sm-4">
                    <span class="trn"> Model</span>
                </label>
                <div class="col-sm-8 drop-scrol" style="">
                    @*<select id="drpModel" class="selectpicker" data-hide-disabled="true" data-live-search="true"></select>*@
                    <select multiple="multiple" id="drpModel" class="multi-option" style=""> </select>
                </div>
            </div>
            <div class="form-group col-lg-3 col-sm-6 col-md-3">
                <label for="" class="control-label col-sm-4">
                    <span class="trn"> Year</span> <span style="color: Red"> </span>
                </label>
                <div class="col-sm-8 dmaster" style="">
                    @*<input type="text" id="txtYear" class="form-control input-sm validate[required] datepicker">*@
                    <input type="text" id="txtYear" class="dateTime form-control input-sm" />
                </div>
            </div>
            <div class="form-group col-lg-1 col-sm-6 col-md-1">
                <button id="btnSubmit" type="button" class="btn btn-success btn-sm"> <i class="fas fa-search icon" data-toggle="tooltip" data-placement="bottom" data-original-title="Search"> </i> </button>
            </div>
        </div>
        <div class="AutomatedQFLPage-Report">
            <div class="AutomatedQFLPage">
                <div class="col-lg-12 chart-panel">

                    <div style="margin: 50px 15px 0 15px; text-align: center;">
                        <canvas id="cvsA" width="1220" height="400" style="border-radius: 5px;">
                            [No canvas support]
                        </canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="chartB">
        <div class="row mt-10">
            <div class="col-lg-4 col-sm-6 col-md-4">
                <label for="" class="control-label col-sm-4">
                    <span class="trn"> Quality Gate</span>
                </label>
                <div class="col-sm-8 dmaster" style="">
                    @*<select id="drpVarient" class="selectpicker" data-hide-disabled="true" data-live-search="true"></select>*@
                    <select multiple="multiple" id="drpQGate" class="multi-option" style=""> </select>
                </div>
            </div>

            <div class="form-group col-lg-3 col-sm-6 col-md-3">
                <label for="" class="control-label col-sm-4">
                    <span class="trn"> Year</span> <span style="color: Red"> </span>
                </label>
                <div class="col-sm-8 dmaster" style="">
                    @*<input type="text" id="txtYear" class="form-control input-sm validate[required] datepicker">*@
                    <input type="text" id="txtYeaStation" class="dateTime form-control input-sm" />
                </div>
            </div>
            <div class="form-group col-lg-1 col-sm-6 col-md-1">
                <button id="btnSubmitStation" type="button" class="btn btn-success btn-sm"> <i class="fas fa-search icon" data-toggle="tooltip" data-placement="bottom" data-original-title="Search"> </i> </button>
            </div>
        </div>
        <div class="AutomatedQFLPage-Report">
            <div class="AutomatedQFLPage">
                <div class="col-lg-12 chart-panel">

                    <div style="margin: 50px 15px 0 15px; text-align: center;">
                        <canvas id="cvsB" width="1220" height="250" style="border-radius: 5px;">
                            [No canvas support]
                        </canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
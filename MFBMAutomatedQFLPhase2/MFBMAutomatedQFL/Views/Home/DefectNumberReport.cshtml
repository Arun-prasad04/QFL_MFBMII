                    <input type="text" id="txtYeaStation" class="dateTime form-control input-sm" />
                </div>
            </div>
            <div class="form-group col-lg-1 col-sm-6 col-md-1">
                <button id="btnSubmitStation" type="button" class="btn btn-success btn-sm"> <i class="fas fa-search icon" data-toggle="tooltip" data-placement="bottom" data-original-title="Search"></i></button>
            </div>
        </div>
        <div class="AutomatedQFLPage-Report">
            <div class="AutomatedQFLPage">
                <div class="col-lg-12 chart-panel">

                    <div style="margin: 50px 15px 0 15px; text-align: center;">
                        <canvas id="cvsB" width="1220" height="250" style="border-radius: 5px;">
                            [No canvas support]
                        </canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="chartC">
        <div class="row mt-10">
            <div class="form-group col-lg-3 col-sm-6 col-md-3">
                <label for="" class="control-label col-sm-4">
                    <span>From Date</span><span style="color: Red"></span>
                </label>
                <div class="col-sm-8 dmaster" style="">
                    @*<input type="text" id="txtYear" class="form-control input-sm validate[required] datepicker">*@
                    <input type="text" id="defectFromDate" class="form-control input-sm" />
                </div>
            </div>

            <div class="form-group col-lg-3 col-sm-6 col-md-3">
                <label for="" class="control-label col-sm-4">
                    <span>End Date</span><span style="color: Red"></span>
                </label>
                <div class="col-sm-8 dmaster" style="">
                    @*<input type="text" id="txtYear" class="form-control input-sm validate[required] datepicker">*@
                    <input type="text" id="defectEndDate" class="form-control input-sm" />
                </div>
            </div>
            <div class="form-group col-lg-1 col-sm-6 col-md-1">
                <button id="btnSubmitByDefect" type="button" class="btn btn-success btn-sm"> <i class="fas fa-search icon" data-toggle="tooltip" data-placement="bottom" data-original-title="Search"></i></button>
            </div>
        </div>
        <div class="AutomatedQFLPage-Report">
            <div class="AutomatedQFLPage">
                <div class="col-lg-12 chart-panel">
                    <div style="margin: 50px 15px 0 15px; text-align: center;">
                        <canvas id="cvsC" width="1250" height="920" style="border-radius: 5px;">
                            [No canvas support]
                        </canvas>
                    </div>
                </div>
            </div>
        </div>




    </div>

    <div id="chartD">
        <div class="row mt-10">

            <div class="form-group col-lg-3 col-sm-6 col-md-3">
                <label for="" class="control-label col-sm-4">
                    <span>Year</span><span style="color: Red"></span>
                </label>
                <div class="col-sm-8 dmaster" style="">
                    @*<input type="text" id="txtYear" class="form-control input-sm validate[required] datepicker">*@
                    <input type="text" id="txtClassification" class="dateTime form-control input-sm" />
                </div>
            </div>
            <div class="form-group col-lg-1 col-sm-6 col-md-1">
                <button id="btnSubmitByClassification" type="button" class="btn btn-success btn-sm"> <i class="fas fa-search icon" data-toggle="tooltip" data-placement="bottom" data-original-title="Search"></i></button>
            </div>
        </div>
        <div class="AutomatedQFLPage-Report">
            <div class="AutomatedQFLPage">
                <div class="col-lg-12 chart-panel">

                    <div style="margin: 50px 15px 0 15px; text-align: center;">
                        <canvas id="cvsD" width="1220" height="250" style="border-radius: 5px;">
                            [No canvas support]
                        </canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>













